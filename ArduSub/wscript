#!/usr/bin/env python
# encoding: utf-8

def build(bld):
    vehicle = bld.path.name
    bld.ap_stlib(
        name=vehicle + '_libs',
        vehicle=vehicle,
        libraries=bld.ap_common_vehicle_libraries() + [
        	'AP_ADSB',
            'AC_AttitudeControl',
            'AC_InputManager',
            'AC_Fence',
            'AC_Avoidance',
            'AC_PID',
            'AC_Sprayer',
            'AC_WPNav',
            'AP_Camera',
            'AP_InertialNav',
            'AP_JSButton',
            'AP_LeakDetector',
            'AP_Menu',
            'AP_Motors',
            'AP_Mount',
            'AP_Parachute',
            'AP_RCMapper',
            'AP_RPM',
            'AP_RSSI',
            'AP_Relay',
            'AP_ServoRelayEvents',
            'AP_Proximity',
            'AP_Gripper',
        ],
        use='mavlink',
    )

    frames = (
        'bluerov','vectored','vectored6DOF','simplerov','vectored90'
    )

    for frame in frames:
        frame_config = frame.upper().replace('-','_') + '_FRAME'
        bld.ap_program(
            program_name='ardusub-%s' % frame,
            program_groups=['bin', 'sub'],
            use=vehicle + '_libs',
            defines=['FRAME_CONFIG=%s' % frame_config],
        )
