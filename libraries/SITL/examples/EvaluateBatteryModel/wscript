#!/usr/bin/env python3

# flake8: noqa

def build(bld):

    if bld.env.BOARD != 'linux':
        return

    source = bld.path.ant_glob('*.cpp')
    source.append('../../../../libraries/SITL/SIM_Battery.cpp')
    source.append('../../../../libraries/SITL/SIM_Frame.cpp')

    bld.ap_program(
        use='ap',
        program_groups=['examples'],
        source=source,
    )

