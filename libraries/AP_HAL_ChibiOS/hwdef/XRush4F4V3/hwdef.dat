# hw definition file for processing by chibios_hwdef.py
# for XRush4 F4 V3 hardware.
# With F405 MCU, ICM42688 IMU, BMP280/DPS310 BARO and AT7456E series OSD
# by CO «CF TECHNO4» and .agentstwo.nerukhomosti for science boosting

MCU STM32F4xx STM32F405xx

HAL_CHIBIOS_ARCH_F405 1

APJ_BOARD_ID AP_HW_XRush4_F4V3

OSCILLATOR_HZ 8000000

STM32_VDD 330U

STM32_ST_USE_TIMER 5
define CH_CFG_ST_RESOLUTION 16

I2C_ORDER I2C1

SERIAL_ORDER OTG1 USART1 USART2 USART3 UART4 UART5

PA11 OTG_FS_DM OTG1
PA12 OTG_FS_DP OTG1

PB6 USART1_TX USART1
PB7 USART1_RX USART1 SPEED_VERYLOW
define DEFAULT_SERIAL1_PROTOCOL SerialProtocol_Tramp

PA2 USART2_TX USART2
PA3 USART2_RX USART2 TIM2_CH4 TIM2 RCININT PULLDOWN LOW
define DEFAULT_SERIAL2_PROTOCOL SerialProtocol_ESCTelemetry

PB10 USART3_TX USART3
PB11 USART3_RX USART3
define DEFAULT_SERIAL3_PROTOCOL SerialProtocol_GPS

PA0 UART4_TX UART4
PA1 UART4_RX UART4 
define DEFAULT_SERIAL4_PROTOCOL SerialProtocol_RCIN

PC12 UART5_TX UART5 NODMA
PD2 UART5_RX UART5 NODMA
define DEFAULT_SERIAL5_PROTOCOL SerialProtocol_MSP_DisplayPort

PC1 BATT_VOLTAGE_SENS ADC1 SCALE(1)
PC2 RSSI_ADC ADC1
PC3 BATT_CURRENT_SENS ADC1 SCALE(1)

PC8 TIM3_CH3 TIM3 PWM(1) GPIO(50) BIDIR
PC9 TIM3_CH4 TIM3 PWM(2) GPIO(51)
PA8 TIM1_CH1 TIM1 PWM(3) GPIO(52) BIDIR
PA9 TIM1_CH2 TIM1 PWM(4) GPIO(53)   

PC6 TIM8_CH1 TIM8 PWM(5) GPIO(54)
PC7 TIM8_CH2 TIM8 PWM(6) GPIO(55) 

PB3 TIM2_CH2 TIM2 PWM(7) GPIO(56)

PC13 BUZZER OUTPUT GPIO(80) LOW
define HAL_BUZZER_PIN 80

PC14 LED_RED OUTPUT HIGH GPIO(0) 
PC15 LED_GREEN OUTPUT HIGH GPIO(1)
define HAL_GPIO_A_LED_PIN 0
define HAL_GPIO_B_LED_PIN 1

PB8 I2C1_SCL I2C1
PB9 I2C1_SDA I2C1

# define HAL_AIRSPEED_TYPE_DEFAULT 1   
# define AIRSPEED_MAX_SENSORS 1

PA4 GYRO1_CS CS
PA5 SPI1_SCK SPI1
PA6 SPI1_MISO SPI1
PA7 SPI1_MOSI SPI1

PA15 AT7456E_CS CS
PB5 SPI3_MOSI SPI3
PC11 SPI3_MISO SPI3
PC10 SPI3_SCK SPI3

PB12 SDCARD_CS CS
PB13 SPI2_SCK SPI2
PB14 SPI2_MISO SPI2
PB15 SPI2_MOSI SPI2

SPIDEV icm42688 SPI1 DEVID1 GYRO1_CS MODE3 1*MHZ 10*MHZ

SPIDEV osd SPI3 DEVID1 AT7456E_CS MODE0 10*MHZ 10*MHZ

SPIDEV dataflash SPI2 DEVID1 SDCARD_CS MODE0 104*MHZ 104*MHZ

IMU Invensensev3 SPI:icm42688 ROTATION_ROLL_180_YAW_90

BARO BMP280 I2C:0:0x76
BARO DPS310 I2C:0:0x76

define ALLOW_ARM_NO_COMPASS
# define HAL_PROBE_EXTERNAL_I2C_COMPASSES
define AP_COMPASS_PROBING_ENABLED 1
define AP_BARO_PROBE_EXTERNAL_I2C

define AP_COMPASS_HMC5843_ENABLED 1
define AP_COMPASS_QMC5883L_ENABLED 1

COMPASS HMC5843 I2C:ALL_EXTERNAL:0x1E true ROTATION_NONE
COMPASS QMC5883L I2C:ALL_EXTERNAL:0x0D true ROTATION_NONE

define HAL_I2C_INTERNAL_MASK 0
define HAL_COMPASS_AUTO_ROT_DEFAULT 2

define HAL_STORAGE_SIZE 15360
define HAL_LOGGING_DATAFLASH_ENABLED 1

STORAGE_FLASH_PAGE 1

FLASH_SIZE_KB 1024
FLASH_RESERVE_START_KB 64

define HAL_BATT_VOLT_PIN 11
define HAL_BATT_CURR_PIN 13
define HAL_BATT_VOLT_SCALE 11
define HAL_BATT_CURR_SCALE 25.0
define HAL_BATT_MONITOR_DEFAULT 4

define BOARD_RSSI_ANA_PIN 12

define OSD_ENABLED 1
define HAL_OSD_TYPE_DEFAULT 1

ROMFS_WILDCARD libraries/AP_OSD/fonts/font*.bin

DMA_NOSHARE TIM3_UP TIM1_UP SPI1*
DMA_PRIORITY TIM3_UP TIM1_UP TIM8_UP SPI1*

include ../include/minimize_fpv_osd.inc

PB1 VTX_PWR OUTPUT LOW GPIO(81)
define RELAY2_PIN_DEFAULT 81

PA13 CAM_SW OUTPUT LOW GPIO(82)
define RELAY3_PIN_DEFAULT 82