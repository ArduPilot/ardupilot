
# hw definition file for processing by chibios_hwdef.py
# for SPEDIXH743 hardware.
# thanks to betaflight for pin information

# MCU class and specific type
MCU STM32H7xx STM32H743xx

# board ID for firmware load
APJ_BOARD_ID AP_HW_SPEDIXH743

# crystal frequency, setup to use external oscillator
OSCILLATOR_HZ 8000000
MCU_CLOCKRATE_MHZ 480

FLASH_SIZE_KB 2048

# bootloader takes first sector
FLASH_RESERVE_START_KB 384

define HAL_STORAGE_SIZE 16384
define STORAGE_FLASH_PAGE 1

STM32_ST_USE_TIMER 2

# SPI devices

# SPI1
PB3 SPI1_SCK SPI1
PB4 SPI1_MISO SPI1
PB5 SPI1_MOSI SPI1

# SPI2
PB13 SPI2_SCK SPI2
PB14 SPI2_MISO SPI2
PB15 SPI2_MOSI SPI2

# SPI3
PC10 SPI3_SCK SPI3
PC11 SPI3_MISO SPI3
PC12 SPI3_MOSI SPI3

# SPI4
PE2 SPI4_SCK SPI4
PE5 SPI4_MISO SPI4
PE6 SPI4_MOSI SPI4

# Chip select pins
PA8 FLASH1_CS CS
PA15 GYRO1_CS CS
PE3 GYRO2_CS CS

# Beeper
PD14 BUZZER OUTPUT GPIO(80) LOW
define HAL_BUZZER_PIN 80

# SERIAL ports
SERIAL_ORDER OTG1 USART1 USART2 USART3 UART4 UART5 USART6 UART7 UART8
# PA10 IO-debug-console
PA11 OTG_FS_DM OTG1
PA12 OTG_FS_DP OTG1

# USART1 - Telem 1
PA9 USART1_TX USART1
PB7 USART1_RX USART1
define DEFAULT_SERIAL1_PROTOCOL SerialProtocol_MAVLink

# USART2 - RX/ELRS
PD5 USART2_TX USART2
PD6 USART2_RX USART2
define DEFAULT_SERIAL2_PROTOCOL SerialProtocol_RCIN

# USART3 - Telem 2
PD8 USART3_TX USART3
PD9 USART3_RX USART3
define DEFAULT_SERIAL3_PROTOCOL SerialProtocol_MAVLink

# UART4 - MSP Display Port / VTX
PD0 UART4_RX UART4
PD1 UART4_TX UART4
define DEFAULT_SERIAL4_PROTOCOL SerialProtocol_MSP_DisplayPort

# UART5 - ESC Telemetry
PB6 UART5_TX UART5 NODMA
PD2 UART5_RX UART5 NODMA
define DEFAULT_SERIAL5_PROTOCOL SerialProtocol_ESCTelemetry

# USART6 - GPS
PC6 USART6_TX USART6
PC7 USART6_RX USART6
define DEFAULT_SERIAL6_PROTOCOL SerialProtocol_GPS

# UART7 - Spare
PE7 UART7_RX UART7 NODMA
PE8 UART7_TX UART7 NODMA

# UART8 - Spare
PE0 UART8_RX UART8 NODMA
PE1 UART8_TX UART8 NODMA

# I2C ports
I2C_ORDER I2C1 I2C2 I2C4

# I2C1
PB8 I2C1_SCL I2C1 PULLUP
PB9 I2C1_SDA I2C1 PULLUP

# I2C2
PB10 I2C2_SCL I2C2 PULLUP
PB11 I2C2_SDA I2C2 PULLUP

# I2C4
PD12 I2C4_SCL I2C4 PULLUP
PD13 I2C4_SDA I2C4 PULLUP

# Servos
PA1 CAMERA_CC OUTPUT GPIO(81) LOW
define RELAY2_PIN_DEFAULT 81
PA2 VTX_SW OUTPUT GPIO(82) LOW
define RELAY3_PIN_DEFAULT 82
PA3 CAMERA_SW OUTPUT GPIO(83) LOW
define RELAY4_PIN_DEFAULT 83

# ADC ports

# ADC1
PC0 BATT_VOLTAGE_SENS ADC1 SCALE(1)
define HAL_BATT_VOLT_PIN 10
define HAL_BATT_VOLT_SCALE 11.0
PC1 BATT_CURRENT_SENS ADC1 SCALE(1)
define HAL_BATT_CURR_PIN 11
define HAL_BATT_CURR_SCALE 25.0
define HAL_BATT_MONITOR_DEFAULT 4

# MOTORS
PE9 TIM1_CH1 TIM1 PWM(1) GPIO(50) BIDIR # M1
PE11 TIM1_CH2 TIM1 PWM(2) GPIO(51)       # M2
PE13 TIM1_CH3 TIM1 PWM(3) GPIO(52) BIDIR # M3
PE14 TIM1_CH4 TIM1 PWM(4) GPIO(53)       # M4
PC8 TIM8_CH3 TIM8 PWM(5) GPIO(54) BIDIR # M5
PC9 TIM8_CH4 TIM8 PWM(6) GPIO(55)       # M6
PA6 TIM3_CH1 TIM3 PWM(7) GPIO(56) BIDIR # M7
PA7 TIM3_CH2 TIM3 PWM(8) GPIO(57)       # M8

# LEDs
PA0 TIM5_CH1 TIM5 PWM(9) GPIO(58) # M9

define AP_NOTIFY_GPIO_LED_2_ENABLED 1
PC4 LED0 OUTPUT LOW GPIO(90)
define HAL_GPIO_A_LED_PIN 90

PC5 LED1 OUTPUT LOW GPIO(91)
define HAL_GPIO_B_LED_PIN 91

# Dataflash setup
SPIDEV dataflash SPI3 DEVID1 FLASH1_CS     MODE3 104*MHZ 104*MHZ

define HAL_LOGGING_DATAFLASH_ENABLED 1

# IMU setup

# IMU setup
SPIDEV imu1   SPI1 DEVID1 GYRO1_CS   MODE3   1*MHZ   16*MHZ
# IMU setup
SPIDEV imu2   SPI4 DEVID1 GYRO2_CS   MODE3   1*MHZ   16*MHZ
IMU Invensensev3 SPI:imu1 ROTATION_ROLL_180
IMU Invensensev3 SPI:imu2 ROTATION_ROLL_180

DMA_NOSHARE TIM1_UP TIM8_UP TIM3_UP SPI1* SPI4*
DMA_PRIORITY TIM1_UP TIM8_UP TIM3_UP SPI1* SPI4*

# SPA06 integrated on I2C1 bus
define AP_BARO_SPL06_ENABLED 1
BARO SPL06 I2C:0:0x76

# no built-in compass, but probe the i2c bus for all possible
# external compass types
define ALLOW_ARM_NO_COMPASS
define HAL_PROBE_EXTERNAL_I2C_COMPASSES
define HAL_I2C_INTERNAL_MASK 0
define HAL_COMPASS_AUTO_ROT_DEFAULT 2
define HAL_DEFAULT_INS_FAST_SAMPLE 3
# Motor order implies Betaflight/X for standard ESCs
define HAL_FRAME_TYPE_DEFAULT 12
